<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Deleteitem</servlet-name>
        <servlet-class>servlets.Deleteitem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoProductos</servlet-name>
        <servlet-class>servlets.NuevoProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProducto</servlet-name>
        <servlet-class>servlets.EliminarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarProducto</servlet-name>
        <servlet-class>servlets.ModificarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoUsuario</servlet-name>
        <servlet-class>servlets.NuevoUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarCategoria</servlet-name>
        <servlet-class>servlets.EliminarCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevaCategoria</servlet-name>
        <servlet-class>servlets.NuevaCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Modificarcategoria</servlet-name>
        <servlet-class>servlets.Modificarcategoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Deleteitem</servlet-name>
        <url-pattern>/borraritem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoProductos</servlet-name>
        <url-pattern>/crearproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProducto</servlet-name>
        <url-pattern>/borrarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarProducto</servlet-name>
        <url-pattern>/updateProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoUsuario</servlet-name>
        <url-pattern>/Registar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarCategoria</servlet-name>
        <url-pattern>/borrarcategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevaCategoria</servlet-name>
        <url-pattern>/crearcategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Modificarcategoria</servlet-name>
        <url-pattern>/updateCategoria</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
